{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "Stmt1CreateManageServerlessAssets",
            "Effect": "Allow",
            "Action": [
                "s3:*",
                "cloudfront:*",
                "cloudformation:*",
                "execute-api:*",
                "dynamodb:*",
                "lambda:*",
                "xray:*",
                "sqs:*",
                "sns:*",
                "kinesis:*",
                "acm:*",
                "logs:*",
                "cloudwatch:*",
                "events:*",
                "apigateway:*",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeSubnets",
                "ec2:DescribeVpcs",
                "secretsmanager:Describe*",
                "secretsmanager:Get*",
                "secretsmanager:List*",
                "ssm:Describe*",
                "ssm:Get*",
                "ssm:List*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "Stmt2ManageUserRoles",
            "Effect": "Allow",
            "Action": [
                "iam:Get*",
                "iam:List*",
                "iam:CreateRole*",
                "iam:DeleteRole*",
                "iam:*RolePolicy"
            ],
            "Resource": [
                "arn:aws:iam::*:role/jazz-*"
            ]
        },
        {
            "Sid": "Stmt3AssignCustomUserRolesToFunctions",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/jazz-*"
            ]
        },
        {
            "Sid": "Stmt4PermissionsforFunctionsinVPC",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateNetworkInterface",
                "ec2:DescribeNetworkInterfaces",
                "ec2:DeleteNetworkInterface"
            ],
            "Resource": [
                "*"
            ]
        }
    ]
}
