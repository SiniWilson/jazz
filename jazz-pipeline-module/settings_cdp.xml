<?xml version="1.0" encoding="UTF-8"?>
<!-- Sourced from https://gitlab.com/tmobile/templates/-/blob/tmo/master/files/settings_cdp.xml -->
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd" xmlns="http://maven.apache.org/SETTINGS/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <profiles>
    <profile>
     <id>artifactory</id>
      <repositories>
        <repository>
           <id>gitlab-maven</id>
           <url>https://gitlab.com/api/v4/groups/tmobile/-/packages/maven</url>
        </repository>
        <repository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>central</id>
          <name>public-repositories</name>
          <!--ARTIFACTORY_SERVER_URL READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
          <url>${env.ARTIFACTORY_SERVER_URL}/public-repositories</url>
        </repository>
         <repository>
        <snapshots />
        	<id>snapshot</id>
         	<name>snapshot-internal-repositories</name>
           <!--ARTIFACTORY_SERVER_URL READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
          <url>${env.ARTIFACTORY_SERVER_URL}/list/snapshot-internal-repositories</url>
        </repository>
        <repository>
          <snapshots />
          <id>snapshots</id>
          <name>public-repositories</name>
          <!--ARTIFACTORY_SERVER_URL READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
          <url>${env.ARTIFACTORY_SERVER_URL}/public-repositories</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <snapshots>
            <enabled>false</enabled>
         </snapshots>
          <id>central</id>
          <name>public-repositories</name>
          <!--ARTIFACTORY_SERVER_URL READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
          <url>${env.ARTIFACTORY_SERVER_URL}/public-repositories</url>
        </pluginRepository>
        <pluginRepository>
          <snapshots />
          <id>snapshots</id>
          <name>public-repositories</name>
          <!--ARTIFACTORY_SERVER_URL READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
          <url>${env.ARTIFACTORY_SERVER_URL}/public-repositories</url>
        </pluginRepository>
      </pluginRepositories>
      <properties>
          <altDeploymentRepository>gitlab-maven::default::https://gitlab.com/api/v4/projects/${env.CI_PROJECT_ID}/packages/maven</altDeploymentRepository>
      </properties>
    </profile>
      <profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <sonar.host.url>
                   https://sonarqube.service.edp.t-mobile.com
                </sonar.host.url>
            </properties>
      </profile>
      <profile>
      <id>coverage</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>prepare-agent</id>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
              </execution>
              <execution>
                <id>report</id>
                <goals>
                  <goal>report</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.sonarsource.scanner.maven</groupId>
        <artifactId>sonar-maven-plugin</artifactId>
        <version>3.6.0.1398</version>
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.8.6</version>
      </plugin>
    </plugins>
  </build>
  <activeProfiles>
    <activeProfile>artifactory</activeProfile>
  </activeProfiles>
  <servers>
   <server>
      <id>gitlab-maven</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Job-Token</name>
            <value>${env.CI_JOB_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
   </server>
   <server>
        <id>central</id>
        <!--ARTIFACTORY_USER READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
        <username>${env.ARTIFACTORY_USER}</username>
        <!--ARTIFACTORY_PASSWORD READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
        <password>${env.ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
        <id>snapshot</id>
        <!--ARTIFACTORY_USER READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
        <username>${env.ARTIFACTORY_USER}</username>
        <!--ARTIFACTORY_PASSWORD READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
        <password>${env.ARTIFACTORY_PASSWORD}</password>
    </server>
    <server>
        <id>snapshots</id>
        <!--ARTIFACTORY_USER READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
        <username>${env.ARTIFACTORY_USER}</username>
        <!--ARTIFACTORY_PASSWORD READ FROM TOP LEVEL T-MOBILE PROJECT BY DEFAULT. CAN ALSO OVERRIDE VALUE IN PROJECT CI/CD VARIABLES.-->
        <password>${env.ARTIFACTORY_PASSWORD}</password>
    </server>
  </servers>
</settings>
